<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManageProd.Controls.FlyoutFooter"
             xmlns:sys="clr-namespace:System;assembly=netstandard">
    <StackLayout Orientation="Vertical" Margin="20,10">
        <Label Text="Comercializadora de productos"
                   TextColor="GhostWhite"
                   FontAttributes="Bold"
                   HorizontalOptions="Start" />
        <Label Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{0:dd 'de' MMMM yyyy}'}"
                   TextColor="GhostWhite"
                   HorizontalOptions="StartAndExpand" />
    </StackLayout>
</ContentView>